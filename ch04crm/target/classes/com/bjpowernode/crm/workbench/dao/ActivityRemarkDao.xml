<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.bjpowernode.crm.workbench.dao.ActivityRemarkDao">

    <!--根据备注id删除备注记录-->
    <delete id="deleteById">
        delete from tbl_activity_remark where id=#{id}
    </delete>

    <!--根据aid获得所有备注对象-->
    <select id="getRemarkListByAid" resultType="ActivityRemark">
        select * from tbl_activity_remark where activityId = #{activityId}
    </select>

    <select id="getCountByAids" resultType="int">
        select  count(*) from tbl_activity_remark where activityId in
        <foreach collection="array" item="aid" open="(" close=")" separator=",">
            #{aid}
        </foreach>
    </select>

    <delete id="deleteByAids">
        delete from tbl_activity_remark where activityId in
        <foreach collection="array" item="aid" open="(" close=")" separator=",">
            #{aid}
        </foreach>
    </delete>
</mapper>